{
  "manifest_version": 3,
  "name": "TabQuotes",
  "version": "1.2.3",
  "description": "Get inspired daily with customizable quotes tailored to fit your style and boost your motivation!",
  "icons": {
    "16": "./assets/logo/16.png",
    "48": "./assets/logo/48.png",
    "128": "./assets/logo/128.png"
  },
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": [
        "./data/quotes.json",
        "./assets/logo/16.png",
        "./assets/logo/48.png",
        "./assets/logo/128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "./pages/index.html"
  }
}
